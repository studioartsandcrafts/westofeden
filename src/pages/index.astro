    <h2 class="subheading" id="mv">MV</h2>
    <YouTube id="osAEtwyeWC0" class="mb-3" />
    <YouTube id="BEIKnLqyA1Y" />
  </section>
  <section class="mb-24">
    <h2 class="subheading">Recent Achievements</h2>
    <p class="text-center mb-3">(Streaming statistics from Spotify only)</p>
    <div class="divide-y-2 divide-fg">
      <Achievement
        items={[
          {
            title: "SHAUN On the Road North America Tour 2023",
            subtitle: "Seattle Opening Act",
            desc: "(April 2023)",
          },

          {
            title: "riensu & friends",
            subtitle: "Headlining Show",
            desc: "(March 2024)",
          },
          {
            title: "Saint Martin's University (SMU) Spring Fest",
            subtitle: "Main Act",
            desc: "(April 2024)",
          },
          {
            title: "butterfly",
            desc: "41k streams",
            imgsrc: "/images/butterfly.jpg",
            link: "https://open.spotify.com/track/2wqa7edQscmRTT46aoHCNS?si=67126e7797684598",
          },
          {
            title: "CONTACT",
            desc: "27k streams",
            imgsrc: "/images/contact.jpg",
            link: "https://open.spotify.com/track/4ERvaHb0qu8mcGbl1qSsOQ?si=089842f8511342e0",
          },
        ]}
      >
        <Fragment slot="header">
          <p class="leading-none">
            WEST OF EDEN <span class="text-base whitespace-nowrap"
              >(formerly “ways of expression”)</span
            >
          </p>
          <p class="leading-none text-right">8k monthly listeners</p>
        </Fragment>
        <video
          preload="metadata"
          poster="/WOEshaun2023highlight.jpg"
          controls
          class="w-full"
        >
          <source src="/WOEshaun2023highlight.mp4" type="video/mp4" />
        </video>
